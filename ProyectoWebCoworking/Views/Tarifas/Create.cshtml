@model ProyectoWebCoworking.Models.Tarifa
@{
	ViewData["Title"] = "Crear Nueva Tarifa";
}

<h1>Crear Nueva Tarifa</h1>
<hr />

<div class="row">
	<div class="col-md-6">

		<form asp-action="Create" method="post">

			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="mb-3">
				<label asp-for="Nombre" class="form-label"></label>
				<input asp-for="Nombre" class="form-control" placeholder="Ej: Tarifa por Hora, Bono mesual..." />
				<span asp-validation-for="Nombre" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="Precio" class="form-label"></label>
				<input asp-for="Precio" class="form-control" type="number" step="0.01" />
				<span asp-validation-for="Precio" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="TipoRecurso" class="form-label">Tipo de Recurso</label>
				<input asp-for="TipoRecurso" class="form-control" placeholder="Ej: Sala, Puesto fijo..." />
				<span asp-validation-for="TipoRecurso" class="text-danger"></span>
			</div>

			<div class="form-group">
				<button type="submit" class="btn btn-primary">Crear</button>
				<a asp-action="Index" class="btn btn-secondary">Cancelar</a>
			</div>
		</form>
	</div>
</div>
