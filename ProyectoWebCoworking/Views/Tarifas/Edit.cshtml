@model ProyectoWebCoworking.Models.Tarifa
@{
	ViewData["Title"] = "Editar Tarifas";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
	<div class="row justify-content-center">
		<div class="col-md-8 col-lg-6">

			<div class="card shadow-lg border rounded-lg">

				<div class="card-header bg-warning text-white py-3 px-4">
					<div class="d-flex align-items-center">
						<i class="bi bi-pencil-square display-6 me-3"></i>
						<div>
							<h4 class="mb-0 fw-bold">Editar Tarifa</h4>
							<p class="mb-0 small text-white-50">Modifica los datos del plan de precios</p>
						</div>
					</div>
				</div>

				<div class="card-body p-4">
					<form asp-action="Edit" method="post">
						<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

						<input type="hidden" asp-for="Id" />

						<div class="form-floating mb-3">
							<input asp-for="Nombre" class="form-control" placeholder="Nombre de la tarifa" />
							<label asp-for="Nombre">Nombre de la Tarifa</label>
							<span asp-validation-for="Nombre" class="text-danger"></span>
						</div>

						<div class="form-floating mb-3">
							<input asp-for="Precio" class="form-control" type="number" step="0.01" placeholder="Precio" />
							<label asp-for="Precio">Precio por Hora (€)</label>
							<span asp-validation-for="Precio" class="text-danger"></span>
						</div>

						<div class="form-floating mb-3">
							<input asp-for="TipoRecurso" class="form-control" placeholder="Tipo de Recurso" />
							<label asp-for="TipoRecurso">Tipo de Recurso (ej. Sala, Puesto)</label>
							<span asp-validation-for="TipoRecurso" class="text-danger"></span>
							<small class="text-muted ps-2">Debe coincidir con el tipo de recurso.</small>
						</div>

						<div class="d-flex justify-content-end gap-2">
							<a asp-action="Index" class="btn btn-outline-secondary px-4">Cancelar</a>
							<button type="submit" class="btn btn-warning px-4">
								<i class="bi bi-save me-1"></i> Guardar Cambios
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>