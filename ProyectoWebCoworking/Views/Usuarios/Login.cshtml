@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col col-lg-5">

            <div class="card shadow-lg border-0 rounded-lg mt-5">

                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="font-weight-light my-2">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar Sesión
                    </h3>
                    <p class="small mb-0 text-white-50">Bienvenido de nuevo</p>
                </div>

				<div class="card-body p-5">
                    <form asp-controller="Usuarios" asp-action="Login" method="post">
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger d-flex align-items-center fade show" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <div>@ViewBag.Error</div>
                            </div>
                        }
                        <div class="form-floating mb-3">
                            <input type="email" name="Email" class="form-control" id="inputEmail" placeholder="name@example.com" required autocomplete="username" />
                            <label for="inputEmail">Correo Electrónico</label>
                        </div>

                            <div class="form-floating mb-3">
                                <input type="password" name="Password" class="form-control" id="inputPassword" placeholder="Password" required autocomplete="current-password" />
                                <label for="inputPassword">Contraseña</label>
                            </div>

                            <div class="d-grid gap-2 mt-4">
								<button type="submit" class="btn btn-primary btn-lg">Entrar</button>
                            </div>                        
                    </form>
                </div>

                <div class="card-footer text-center py-3">
                    <div class="small">
                        ¿No tienes cuenta? <a asp-action="Registro" class="text-primary fw-bold text-decoration-none">Regístrate gratis</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>