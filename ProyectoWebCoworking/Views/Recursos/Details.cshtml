@model ProyectoWebCoworking.Models.Recurso
@{
	ViewData["Title"] = "Detalles del Recurso";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
	<div class="row justify-content-center">
		<div class="col-md-8">

			<div class="card shadow-lg border rounded-lg">

				<div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3 px-4">
					<div class="d-flex align-items-center">
						<i class="bi bi-info-circle-fill display-6 me-3"></i>
						<div>
							<h4 class="mb-0 fw-bold">Detalles del Recurso</h4>
							<p class="mb-0 small text-white-50">Información completa sobre este espacio</p>
						</div>
					</div>
					<span class="badge bg-white text-primary">ID: @Model.Id</span>
				</div>			

				<div class="card-body p-5">

					<div class="text-center mb-5">
						<h2 class="fw-bold text-primary">@Html.DisplayFor(model => model.Nombre)</h2>
						<span class="badge bg-info bg-opacity-10 text-info border border-info px-3 py-2 rounded-pill">
							@Html.DisplayFor(model => model.Tipo)
						</span>
					</div>

					<div class="row justify-content-center">
						<div class="col-md-8">
							<div class="p-4 bg-light rounded-3 border d-flex align-items-center justify-content-center">
								<div class="text-center">
									<div class="text-muted text-uppercase small fw-bold mb-2">Capacidad</div>
									<div class="display-6 fw-bold text-dark">
										<i class="bi bi-people-fill text-primary me-2"></i>@Html.DisplayFor(model => model.Capacidad)
									</div>
									<div class="small text-muted">personas máx.</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="card-footer bg-white p-4 border-top-0 d-flex justify-content-between">
					<a asp-action="Index" class="btn btn-outline-secondary px-4">
						<i class="bi bi-arrow-left me-1"></i> Volver
					</a>
					<div class="d-flex gap-2">
						<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4">
							<i class="bi bi-pencil-square me-1"></i> Editar
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>