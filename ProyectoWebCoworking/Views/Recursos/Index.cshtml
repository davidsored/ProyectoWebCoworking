@model IEnumerable<ProyectoWebCoworking.Models.Recurso>

@{
    ViewData["Title"] = "Gestionar Recursos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-primary"><i class="bi bi-building-gear me-2"></i>Recursos</h1>
            <p class="text-muted">Administra las salas y puestos disponibles en el coworking.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-lg me-1"></i> Nuevo Recurso
        </a>
    </div>

    <div class="card shadow-lg border-0 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-uppercase small fw-bold text-muted">
                    <tr>
                        <th class="py-3 ps-4">Nombre</th>
                        <th>Tipo</th>
                        <th>Capacidad</th>
                        <th class="text-end pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="bg-light p-2 rounded me-3 text-primary">
                                        @if (item.Tipo.Contains("Sala"))
                                        {
                                            <i class="bi bi-people-fill"></i>
                                        }
                                        else
                                        {

                                            <i class="bi bi-laptop"></i>
                                        }
                                    </div>
                                    <span class="fw-bold text-dark">@Html.DisplayFor(modelItem => item.Nombre)</span>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-info bg-opacity-10 text-info border border-info px-2">
                                    @Html.DisplayFor(modelItem => item.Tipo)
                                </span>
                            </td>
                            <td>
                                <span class="text-muted"><i class="bi bi-person me-1"></i>@Html.DisplayFor(modelItem => item.Capacidad) personas</span>
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm" title="Editar">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm" title="Detalles">
                                        <i class="bi bi-eye-fill"></i>
                                    </a>
                                    <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modalConfirmarBorrado" data-id-recurso="@item.Id" data-nombre-recurso="@item.Nombre" title="Eliminar">
                                        <i class="bi bi-trash3-fill"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="modalConfirmarBorrado" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="modalLabel"><i class="bi bi-exclamation-triangle-fill me-2"></i>Confirmar Eliminación</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body p-4 text-center">
                <div class="mb-3">
                    <i class="bi bi-trash3 text-danger display-1"></i>
                </div>
                <p class="lead mb-1">¿Estás seguro de que quieres eliminar este recurso?</p>
                <p class="fw-bold mb-3" id="nombreRecursoModal">...</p>
                <p class="text-danger small">Esta acción borrará el recurso permanentemente.</p>
            </div>
            <div class="modal-footer bg-light border-0 justify-content-center pb-4">
                <form asp-action="Delete" method="post" class="w-100 px-4 d-flex gap-2">
                    <input type="hidden" name="id" id="idRecursoHidden" />
                    <button type="button" class="btn btn-light border flex-grow-1" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger flex-grow-1">Sí, Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#modalConfirmarBorrado').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var id = button.data('id-recurso');
                var nombre = button.data('nombre-recurso');
                var modal = $(this);
                modal.find('.modal-body #nombreRecursoModal').text(nombre);
                modal.find('.modal-footer #idRecursoHidden').val(id);
            });
        });
    </script>
}